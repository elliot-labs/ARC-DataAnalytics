<?xml version='1.0' encoding='utf-8'?>
<widget id="com.elliotlabs.arcproductioncollection" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ProdCollect</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="ehuffman@elliot-labs.com" href="https://elliot-labs.com">
        Elliot Labs
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/icon-144-xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icon/android/icon-192-xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="windows-target-version" value="10.0" />
    <engine name="android" spec="^6.3.0" />
    <engine name="browser" spec="^5.0.0" />
    <engine name="windows" spec="5.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
